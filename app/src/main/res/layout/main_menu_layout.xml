<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <ImageView
        android:id="@+id/mainMenuImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/menu_image"
        app:srcCompat="@drawable/tunnelescape_title"
        tools:srcCompat="@drawable/tunnelescape_title" />

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Button
            android:id="@+id/singlePlayerButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="0dp"
            android:background="@android:color/holo_red_dark"
            android:text="@string/SinglePlayer"
            android:textColor="@android:color/black"
            android:visibility="visible" />

        <Button
            android:id="@+id/exitButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="50dp"
            android:layout_marginBottom="0dp"
            android:background="@android:color/holo_red_dark"
            android:text="@string/Exit"
            android:textColor="@android:color/black"
            tools:text="@string/Exit" />

        <Button
            android:id="@+id/settingsButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/singlePlayerButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="272dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="270dp"
            android:background="@android:color/holo_red_dark"
            android:contentDescription="@string/settings_button_description"
            android:text="@string/settings_button"
            android:textColor="@android:color/black"
            tools:text="@string/settings_button" />


    </RelativeLayout>


</FrameLayout>
